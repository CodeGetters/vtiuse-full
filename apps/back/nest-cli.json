{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "common/locales/i18n/**/*.json",
        "watchAssets": true,
        "outDir": "dist"
      },
      {
        "include": "logs/*",
        "watchAssets": true
      }
    ]
  }
}
