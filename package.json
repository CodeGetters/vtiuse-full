{
  "name": "root",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": "true",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "format": "prettier --write ./**/*.{vue,ts,tsx,js,jsx,css,less,scss,json,md}",
    "format:ci": "prettier --check packages apps",
    "lint": "turbo lint",
    "prepare": "husky install",
    "dev": "lerna run dev --scope=web",
    "start": "lerna run start --scope=service"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "lint-staged": {
    "*.{js,vue,ts,jsx,tsx}": [
      "prettier --write"
    ],
    "*.{html,css,less,scss,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "keywords": [],
  "author": "CodeGetters",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@types/node": "^20.11.22",
    "@vtiuse/eslint-config": "workspace:*",
    "@vtiuse/typescript-config": "workspace:*",
    "cz-git": "^1.8.0",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.22.0",
    "husky": "^9.0.11",
    "lerna": "^8.1.2",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "turbo": "^1.12.5",
    "typescript": "^5.3.3"
  },
  "homepage": "https://github.com/CodeGetters/vtiuse-full#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodeGetters/vtiuse-full.git"
  },
  "bugs": {
    "url": "https://github.com/CodeGetters/vtiuse-full/issues"
  },
  "packageManager": "pnpm@8.15.0"
}
